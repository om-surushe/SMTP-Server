# SMTP Server Configuration
SMTP_HOST=0.0.0.0
SMTP_PORT=8025

# Authentication (set ENABLE_AUTH=true to enable)
ENABLE_AUTH=false
SMTP_USERNAME=admin
SMTP_PASSWORD=change_this_password

# TLS Configuration (set ENABLE_TLS=true to enable)
ENABLE_TLS=false
TLS_CERTFILE=/path/to/cert.pem
TLS_KEYFILE=/path/to/key.pem

# Message Handling
MAX_MESSAGE_SIZE=26214400  # 25MB
