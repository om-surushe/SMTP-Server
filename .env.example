# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465

# Authentication
# For Gmail, use your email and generate an App Password
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Enable TLS for secure connection (required for Gmail)
ENABLE_TLS=true

# Enable authentication (true/false)
ENABLE_AUTH=false

# Maximum message size in bytes (25MB)
MAX_MESSAGE_SIZE=26214400

# JWT Authentication
JWT_SECRET_KEY=your_very_secure_secret_key_change_this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# HTTP Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
API_PREFIX=/api/v1

# Debug mode (true/false)
DEBUG=false
